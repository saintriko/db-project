<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link href="images/favicon.ico" rel="shortcut icon">

        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}

            <link rel="stylesheet" href="{{ asset('css/foundation.css') }}">
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
            <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700i&display=swap&subset=cyrillic" rel="stylesheet">{% endblock %}
    </head>
    <body>

        {% if app.user == null %}
            <header>
                <div class="grid-container">
                    <div class="top-bar white_header">
                        <a href="{{ path('default')}}"><img src="{{ asset('images/favicon.ico') }}" alt="logo" class="logo top-bar-left"></a>
                        <div class="top-bar-right">
                            <a href="{{ path('app_login')}}"><button class="clear button sign_in" href="#">Войти</button></a>
                            <a href="{{ path('signup')}}"><button class="button sign_up" href="#">Зарегестрироваться</button></a>
                        </div>
                    </div>
                </div>
            </header>
        {% elseif app.user.role.name == 'ROLE_ADMIN' %}
            <header>
                <div class="grid-container">
                    <div class="top-bar white_header">
                        <a href="{{ path('default')}}"><img src="{{ asset('images/favicon.ico') }}" alt="logo" class="logo top-bar-left"></a>
                        <p>{{ app.user.name }}</p>
                        <div class="top-bar-right">
                            <a href="{{ path('add place') }}">Добавить место</a>
                            <a href="{{ path('favourite_places') }}">Любимые места</a>
                            <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    </div>
                </div>
            </header>
        {% else %}
            <header>
                <div class="grid-container">
                    <div class="top-bar white_header">
                        <a href="{{ path('default')}}"><img src="{{ asset('images/favicon.ico') }}" alt="logo" class="logo top-bar-left"></a>
                        <p>{{ app.user.name }}</p>
                        <div class="top-bar-right">
                            <a href="{{ path('favourite_places') }}">Любимые места</a>
                            <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    </div>
                </div>
            </header>
        {% endif %}

        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
