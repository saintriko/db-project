<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link href="{{ asset('images/favicon.ico') }}" rel="shortcut icon">

        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}

            <link rel="stylesheet" href="{{ asset('css/foundation.css') }}">
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
            <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700i&display=swap&subset=cyrillic" rel="stylesheet">{% endblock %}
    </head>
    <body>

        {% if app.user == null %}
            <header>
                <div class="grid-container">
                    <div class="top-bar white_header">
                        <a href="{{ path('default')}}"><img src="{{ asset('images/logotype.png') }}" alt="logo" class="logo top-bar-left"></a>
                        <div class="top-bar-right">
                            <a href="{{ path('app_login')}}"><button class="clear button sign_in" href="#">Войти</button></a>
                            <a href="{{ path('signup')}}"><button class="button sign_up" href="#">Зарегестрироваться</button></a>
                        </div>
                    </div>
                </div>
            </header>
        {% else %}
        <header>
            <div class="grid-container">
                <div class="top-bar white_header">
                    <a href="{{ path('default')}}"><img src="{{ asset('images/logotype.png') }}" alt="logo" class="logo top-bar-left"></a>
                    <div class="top-bar-right">
                        <span class="name_account">{{ app.user.name }}</span>
                        <a class="place" href="{{ path('favourite_places') }}">Любимые места</a>
                        <a class="log_out" href="{{ path('app_logout') }}">Выйти</a>
                    </div>
                </div>
            </div>
        {% endif %}

        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
