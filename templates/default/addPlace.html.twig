{% extends 'base.html.twig' %}

{% block title %} Создание нового заведения {% endblock %}

{% block body %}
    <style>
        .input_image{
            margin-bottom: 20px;
        }
    </style>

    <div class="grid-container">
        <div class="section_title">
            <img src= "{{ asset('images/icon-pen.png') }}">
            <h1>Создание нового заведения</h1>
        </div>
    </div>

    <div class="form">
        <div class="grid-container">
            <div class="grid-x grid-margin-x">
                <form action="{{ path('add place action') }}" name="addPlaceForm"
                      class="cell small-12 medium-12 large-4" method="post" enctype="multipart/form-data">
                    <ul class="spisok">
                        <li class="cell small-12 medium-12 large-4">
                            <p class="field_input_name">Название</p>
                            <input type="text" name="name" class="input-group-field input_footer_form_create_place"
                                   placeholder="Введите название заведения" required>

                            <p class="field_input_name">Телефон</p>
                            <input type="text" name="phone" class="input-group-field input_footer_form_create_place"
                                   placeholder="Введите номер телефона" required>

                            <p class="field_input_name">Адрес</p>
                            <input type="text" name="address" class="input-group-field input_footer_form_create_place"
                                   placeholder="Введите адрес заведения" required>

                            <p class="field_input_name">Координаты</p>
                            <div class="lat">
                                <p class="">lat</p>
                                <input type="number" step=0.000001 name="latitude"
                                       class="input-group-field input_footer_form_create_place" required>
                            </div>
                            <div class="lng">
                                <p class="">lng</p>
                                <input type="number" step=0.000001 name="longitude"
                                       class="input-group-field input_footer_form_create_place" required>
                            </div>

                            <p class="field_input_name">Категория</p>
                            <label>
                                <select class="input_footer_form_create_place" name="category">
                                    {% for category in categories %}
                                        <option value="{{ category.id }}">{{ category.name }}</option>
                                    {% endfor %}
                                </select>
                            </label>

                            <p class="field_input_name">Описание</p>
                            <textarea class="input_review" name="description" required></textarea>
                        </li>

                        <li class="cell small-12 medium-12 large-4">

                            <p class="field_input_name">Изображения</p>
                            <div>
                                <input type="file" name="photo0"
                                       class="input-group-field input_image{#input_footer_form_create_place#}">
                            </div>
                            <div>
                                <input type="file" name="photo1"
                                       class="input-group-field input_image">
                            </div>
                            <div>
                                <input type="file" name="photo2"
                                       class="input-group-field input_image">
                            </div>
                        </li>

                        <li class="cell small-12 medium-12 large-4">
                            <p class="field_input_name">Время работы</p>
                            <table class="list_table">
                                <tbody class="list_tbody">
                                <tr>
                                    <td class="day_of_week">Понедельник</td>
                                    <td class="">
                                        <div class="start_work">
                                            <p class="">C</p>
                                            <input type="time" name="0 start time"
                                                   class="input-group-field input_footer_form_create_place" required>
                                        </div>
                                        <div class="end_work">
                                            <p class="">До</p>
                                            <input type="time" name="0 end time"
                                                   class="input-group-field input_footer_form_create_place" required>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="day_of_week">Вторник</td>
                                    <td class="">
                                        <div class="start_work">
                                            <p class="">C</p>
                                            <input type="time" name="1 start time"
                                                   class="input-group-field input_footer_form_create_place" required>
                                        </div>
                                        <div class="end_work">
                                            <p class="">До</p>
                                            <input type="time" name="1 end time"
                                                   class="input-group-field input_footer_form_create_place" required>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="day_of_week">Среда</td>
                                    <td class="">
                                        <div class="start_work">
                                            <p class="">C</p>
                                            <input type="time" name="2 start time"
                                                   class="input-group-field input_footer_form_create_place" required>
                                        </div>
                                        <div class="end_work">
                                            <p class="">До</p>
                                            <input type="time" name="2 end time"
                                                   class="input-group-field input_footer_form_create_place" required>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="day_of_week">Четверг</td>
                                    <td class="">
                                        <div class="start_work">
                                            <p class="">C</p>
                                            <input type="time" name="3 start time"
                                                   class="input-group-field input_footer_form_create_place" required>
                                        </div>
                                        <div class="end_work">
                                            <p class="">До</p>
                                            <input type="time" name="3 end time"
                                                   class="input-group-field input_footer_form_create_place" required>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="day_of_week">Пятница</td>
                                    <td class="">
                                        <div class="start_work">
                                            <p class="">C</p>
                                            <input type="time" name="4 start time"
                                                   class="input-group-field input_footer_form_create_place" required>
                                        </div>
                                        <div class="end_work">
                                            <p class="">До</p>
                                            <input type="time" name="4 end time"
                                                   class="input-group-field input_footer_form_create_place" required>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="day_of_week">Суббота</td>
                                    <td class="">
                                        <div class="start_work">
                                            <p class="">C</p>
                                            <input type="time" name="5 start time"
                                                   class="input-group-field input_footer_form_create_place" required>
                                        </div>
                                        <div class="end_work">
                                            <p class="">До</p>
                                            <input type="time" name="5 end time"
                                                   class="input-group-field input_footer_form_create_place" required>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="day_of_week">Воскресение</td>
                                    <td class="">
                                        <div class="start_work">
                                            <p class="">C</p>
                                            <input type="time" name="6 start time"
                                                   class="input-group-field input_footer_form_create_place" required>
                                        </div>
                                        <div class="end_work">
                                            <p class="">До</p>
                                            <input type="time" name="6 end time"
                                                   class="input-group-field input_footer_form_create_place" required>
                                        </div>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </li>
                    </ul>


                    <label for="createNewPlace" class="button save_button cell small-12 medium-12 large-4">Создать</label>
                    <input type="submit" id="createNewPlace" class="show-for-sr"></input>

                </form>
            </div>
        </div>
    </div>
{% endblock %}
